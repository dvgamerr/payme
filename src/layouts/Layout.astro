---
interface Props {
  title?: string
}

const { title = 'PayMe - Budget Tracker' } = Astro.props
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content="Simple and effective monthly budget tracking" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
  </head>
  <body>
    <div id="app">
      <slot />
    </div>
  </body>
</html>

<style is:global>
  @import '../styles/global.css';
</style>
