---
import { ClientRouter } from 'astro:transitions'

interface Props {
  title?: string
}

const { title = 'PayMe - Budget Tracker' } = Astro.props
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content="Simple and effective monthly budget tracking" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <ClientRouter />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Noto+Sans+Thai:wght@300;400;500;600;700&family=Noto+Sans:wght@300;400;500;600;700&display=swap"
      rel="stylesheet"
    />
  </head>
  <body>
    <div id="app">
      <slot />
    </div>
  </body>
</html>

<style is:global>
  @import '../styles/global.css';
</style>

<script>
  import { navigate } from 'astro:transitions/client'

  // Listen for navigation with direction data
  document.addEventListener('astro:before-preparation', (event) => {
    const direction = (event as any).direction || sessionStorage.getItem('nav-direction')
    if (direction) {
      document.documentElement.dataset.astroTransition = direction
      sessionStorage.removeItem('nav-direction')
    }
  })

  // Handle clicks on links with data-direction
  document.addEventListener('click', (e) => {
    const target = (e.target as HTMLElement).closest('a')
    if (target && target.dataset.astroTransition) {
      e.preventDefault()
      sessionStorage.setItem('nav-direction', target.dataset.astroTransition)
      navigate(target.href)
    }
  })
</script>
